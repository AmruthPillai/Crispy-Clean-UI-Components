<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid
                android:color="@android:color/white" />
            <corners
                android:topLeftRadius="@dimen/edittext_cornerradius"
                android:topRightRadius="@dimen/edittext_cornerradius"/>
            <padding
                android:top="@dimen/edittext_horizontal_padding"
                android:bottom="@dimen/edittext_horizontal_padding"
                android:left="@dimen/edittext_vertical_padding"
                android:right="@dimen/edittext_vertical_padding" />
            <stroke
                android:width="1dp"
                android:color="#DDD" />
        </shape>
    </item>
</layer-list>